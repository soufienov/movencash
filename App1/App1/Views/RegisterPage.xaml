<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Views.RegisterPage">
    <ContentPage.Content>
        <StackLayout Padding="0,20,0,0" Spacing="10">
            <Entry Text="{Binding Name}"  Placeholder="Name" Keyboard="Text" />
            <Entry Text="{Binding Lname}" Placeholder="Last name" Keyboard="Text"/>
            <Entry Text="{Binding Email}" Placeholder="Email" Keyboard="Email" />
            <Entry Text="{Binding Password}" Placeholder="Password" IsPassword="True" />

            <Button Command="{Binding RegisterCmd}" Text="Register"/>
            <Button Text="login" Clicked="OnNextPageButtonClicked"/>
        </StackLayout></ContentPage.Content>
</ContentPage>