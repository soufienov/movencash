<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Views.NouvelleAnnonce">
    <ContentPage.Content>
        <StackLayout>

                
                    <Label Text="Titre:" />
                            <Entry Text="{Binding annonce.titre}" />
            <Label Text="Description"/>
            <Entry Text="{Binding annonce.titredesc}" />
                    
                            <Label Text="Local:" />
            <Entry Text="{Binding annonce.local}"/>
                      
                            <Label Text="Motif:" />
            <Picker >
                <Picker.Items>
                    <x:String>Vente</x:String>
                    <x:String>Demenagement</x:String>
                    <x:String>Succession</x:String>
                </Picker.Items>
            </Picker>

            <Label Text="Acces:" />
            <Entry Text="{Binding annonce.acces}"  />
                  
         
        </StackLayout>
    </ContentPage.Content>
</ContentPage>